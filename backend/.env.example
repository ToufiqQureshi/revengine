# Environment Variables
# Copy this file to .env and fill in your values

# App Settings
APP_NAME="Hotelier Hub API"
APP_VERSION="1.0.0"
DEBUG=true

# Database
# Development: SQLite
DATABASE_URL="sqlite+aiosqlite:///./hotelier_hub.db"
# Production: PostgreSQL (uncomment below)
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/hotelier_hub"

# JWT Security
# IMPORTANT: Change this in production!
SECRET_KEY="your-super-secret-key-change-in-production-minimum-32-chars"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated for multiple)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://127.0.0.1:5173"]
